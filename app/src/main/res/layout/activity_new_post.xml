<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NewPost">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        android:background="@drawable/menu_main"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        app:labelVisibilityMode="unlabeled"
        android:layout_alignParentBottom="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/top_menu_bg"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="#fff" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.5dp"
            android:text="@string/menu_new_post"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/main_toolbar"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/main_toolbar"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/selected_pic_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="56dp">

        <ImageView
            android:layout_width="288dp"
            android:layout_height="260dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/post_card"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/options_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/selected_pic_view">

        <Button
            android:id="@+id/album_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="100dp"
            android:background="@drawable/search_button" />

        <Button
            android:id="@+id/video_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@+id/album_btn"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/search_button" />

        <Button
            android:id="@+id/picture_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@+id/video_btn"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/search_button" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gallery_view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/options_view">

    </RelativeLayout>
</RelativeLayout>